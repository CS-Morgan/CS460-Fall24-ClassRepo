@model Sample2.Models.SongViewModel

<div class="container mt-4">
    <h2>Team Assignment</h2>

    @if (Model.Teams != null && Model.Teams.Any())
    {
        <h3>Teams:</h3>

        @foreach (var team in Model.Teams)
        {
            <div class="card mt-3">
                <div class="card-header bg-primary text-white">
                    <h4>@team.Key</h4> <!-- Display the team name -->
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var user in team.Value)
                        {
                            <li class="list-group-item">@user</li> <!-- Display the user name -->
                        }
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <p>No teams were generated. Please try again.</p>
    }

    <div class="mt-4">
        <button id="generateButton" class="btn btn-primary">Generate Random Team Names</button>
    </div>
</div>

<div class="mt-4">
    <a href="/" class="btn btn-secondary">Back to Input Page</a>
</div>

@section Scripts {
    <script>
        document.getElementById('generateButton').addEventListener('click', function () {
            fetch('@Url.Action("GetRandomTeamNames", "Home")')
                .then(response => response.json())
                .then(data => {
                    if (data.length > 0) {
                        const teamHeaders = document.querySelectorAll('.card-header h4');
                        for (let i = 0; i < teamHeaders.length && i < data.length; i++) {
                            teamHeaders[i].textContent = data[i]; // Update team names
                        }
                    } else {
                        alert("No random team names generated.");
                    }
                })
                .catch(error => {
                    console.error('Error fetching random team names:', error);
                });
        });
    </script>
}
