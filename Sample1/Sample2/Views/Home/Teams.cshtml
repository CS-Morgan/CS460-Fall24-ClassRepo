@model Sample2.Models.SongViewModel

<div class="container mt-4">
    <h2>Team Assignment Results</h2>

    @if (Model.Teams != null && Model.Teams.Any())
    {
        <h3>Randomly Generated Teams:</h3>

        <!-- Loop through each team -->
        @foreach (var team in Model.Teams)
        {
            <div class="card mt-6">
                <div class="card-header bg-primary text-white">
                    <h4>@team.Key </h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <ul class="list-group list-group-flush">
                        <!-- Loop through each member in the team -->
                        @foreach (var user in team.Value)
                        {
                            <li class="list-group-item">@user</li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <p>No teams were generated. Please try again.</p>
    }
</div>

<!-- Button for both Team Generation and Home Page on Bottom-->
<div class="mt-4">
    <button id="generateButton" class="btn btn-primary">Generate Random Team Names</button>
</div>


<div class="mt-4">
    <a href="/" class="btn btn-secondary">Back to Home Page</a>
</div>

<div class="mt-4">
</div>


@section Scripts {
    <script>
        document.getElementById('generateButton').addEventListener('click', function () {
            fetch('@Url.Action("GetRandomTeamNames", "Home")')
                .then(response => response.json())
                .then(data => {
                    if (data.length > 0) {
                        const teamHeaders = document.querySelectorAll('.card-header h4');
                        for (let i = 0; i < teamHeaders.length && i < data.length; i++) {
                            teamHeaders[i].textContent = data[i]; // Update team names
                        }
                    } else {
                        alert("No random team names generated.");
                    }
                })
                .catch(error => {
                    console.error('Error fetching random team names:', error);
                });
        });
    </script>
}
