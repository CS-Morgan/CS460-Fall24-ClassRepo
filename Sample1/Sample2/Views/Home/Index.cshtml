@model Sample2.Models.SongViewModel

<h2>Select Random Songs</h2>

<form asp-action="Index" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="NumberOfSongs">How many random songs would you like?</label>
        <input asp-for="NumberOfSongs" class="form-control" />
        <span asp-validation-for="NumberOfSongs" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (Model.SelectedSongs != null && Model.SelectedSongs.Any())
{
    <h3>Randomly Selected Songs:</h3>
    <ul>
        @foreach (var song in Model.SelectedSongs)
        {
            <li>@song</li>
        }
    </ul>
}
